<% if !@groups.empty? %>
<% @groups.each do |group| %>
    <%= group.name %><br>
    <%= group.description %><br>
    <%= button_to "Join", "/groups/#{group.id}", :method => :post,class: 'f_submit' %><br> <br>
    <% end %>
      <%= button_to "Would you like to create a group", "/groups/new", :method => :get, class: 'group_creation_button'  %>
<% elsif @groups.empty? %>
    No available groups
    <%= button_to "Would you like to create a group", "/groups/new", :method => :get, class: 'group_creation_button'  %>
    <% end %>
    <%=button_to "Go Back", user_path(cookies[:user_id]), :method => :get, class: 'f_submit' %>